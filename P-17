## selection sort

class SelectionSort:
    def __init__(self, num_list):
        self.num_list = num_list

    def sort(self):
        n = len(self.num_list)
        for i in range(n):
            min_idx = i
            for j in range(i + 1, n):
                if self.num_list[min_idx] > self.num_list[j]:
                    min_idx = j
            self.num_list[i], self.num_list[min_idx] = self.num_list[min_idx], self.num_list[i]

# Get user input
numbers_str = input("Enter numbers separated by spaces: ")
numbers = [int(x) for x in numbers_str.split()]

# Create an instance of SelectionSort
sorter = SelectionSort(numbers)

# Perform selection sort
sorter.sort()

# Print the sorted list
print("Sorted list:", sorted.num_list)

#Insertion sort

class InsertionSort:
    def __init__(self, mylist):
        self.mylist = mylist

    def sort(self):
        k = 1
        length = len(self.mylist)
        for i in range(length):
            key = self.mylist[i]
            for j in range(i, 0, -1):
                if key < self.mylist[j - 1]:
                    temp = self.mylist[j]
                    self.mylist[j] = self.mylist[j - 1]
                    self.mylist[j - 1] = temp
            print(f"Pass {k}: {self.mylist}")
            k += 1

# Get user input for the list
user_input = input("Enter a comma-separated list of numbers: ")
mylist = [int(x) for x in user_input.split(",")]

print("List before sorting")
print(mylist)

# Create an instance of the InsertionSort class
sorter = InsertionSort(mylist)

# Call the sort method on the instance
sorter.sort()

print("List after sorting")
print(sorter.mylist)
